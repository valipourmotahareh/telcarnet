<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backload">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fillViewport="true"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/loginform"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="لاگین دستی"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                <View
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:layout_gravity="right"
                        android:layout_weight="1.6"
                        android:background="#c0c0c0"
                        tools:ignore="MissingConstraints" />
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/linear_logo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top"
                    android:gravity="center"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/logoentt" />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_logo"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/dialog_rename_txt_codecar"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <EditText
                            android:id="@+id/edt_codecar"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:gravity="center"
                            android:hint="کدپشت دستگاه"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/txt_namecar"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <EditText
                            android:id="@+id/edt_namecar"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:gravity="center"
                            android:hint="نام(اختیاری)"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/txt_sim_card1"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <EditText
                            android:id="@+id/edt_sim_card_1"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:gravity="center"
                            android:hint="سیم کارت 1 موبایل"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/txt_sim_card2"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <EditText
                            android:id="@+id/edt_sim_card_2"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:gravity="center"
                            android:hint="سیم کارت 2 موبایل"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textSize="14sp" />

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/linear_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/txt_phone"
                            android:textColor="@color/colortxtentt" />

                    <EditText
                            android:id="@+id/edt_phonenumber"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:drawableRight="@drawable/phonebook"
                            android:gravity="center"
                            android:hint="سیم کارت داخل ردیاب"
                            android:inputType="number"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textDirection="ltr"
                            android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="@string/txt_password"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/styleedittext"
                            android:gravity="center"
                            android:hint="کد چهار رقمی"
                            android:text="1234"
                            android:textColor="@color/color_white"
                            android:textColorHint="@color/colortxtentt"
                            android:textSize="14sp"
                            android:inputType="number"/>

                </LinearLayout>


                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/linear_phone">

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    <Button
                            android:id="@+id/btn_contact"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@drawable/enttbuton"
                            android:onClick="btn_contact"
                            android:text="@string/txt_contact"
                            android:textColor="@color/color_white" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                <LinearLayout
                        android:id="@+id/linear_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                    <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="left"
                            android:layout_weight="1.6"
                            android:background="#c0c0c0" />

                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/txt_entt"
                            android:textColor="@color/colortxtentt"
                            android:textSize="15dp" />

                    <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="right"
                            android:layout_weight="1.6"
                            android:background="#c0c0c0"
                            android:foregroundGravity="left" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_center"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:layoutDirection="rtl">

                    <LinearLayout
                            android:id="@+id/tcn_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="Traketclick"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/img_traket"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:src="@drawable/trackericonoff" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_tracket"
                                android:textColor="@color/color_gray" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_tracket_number"
                                android:textColor="@color/color_gray" />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/tcn1_200"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="Traketclick"
                            android:orientation="vertical"
                            android:visibility="gone">

                        <ImageView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:src="@drawable/trackericon" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_tracket"
                                android:textColor="@color/color_white" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_tracket_number"
                                android:textColor="@color/color_white" />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/tcn_300"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="burglar_alarm"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/burglaralarm"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:src="@drawable/burglaralarmoff" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_burglar_alarm"
                                android:textColor="@color/color_gray" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_burglar_alarm_number"
                                android:textColor="@color/color_gray" />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/tcn1_300"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:onClick="burglar_alarm"
                            android:orientation="vertical"
                            android:visibility="gone">

                        <ImageView
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:src="@drawable/burglaralarmon" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_burglar_alarm"
                                android:textColor="@color/white" />

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/txt_burglar_alarm_number"
                                android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>